<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.nof.customview.view.ClockView2
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <com.nof.customview.view.ClockView
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <com.nof.customview.view.ProgressView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:progressItemLength="20dp"/>
        <com.nof.customview.view.ProgressView2
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <com.nof.customview.view.LoadingView
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <com.nof.customview.view.LoadingView2
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</ScrollView>
